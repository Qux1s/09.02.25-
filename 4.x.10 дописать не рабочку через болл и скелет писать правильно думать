#include <iostream>

int userNumber();

int main()
{
    int numberUserTest{ userNumber() };

    if (isPrime(numberUserTest))
         std::cout << "The digit is prime." << "\n"; 
     else
          std::cout << "The digit is not prime." << "\n";
}

for (int count{ 2 }; count <= (numberUserTest / 2); ++count)


        if (numberUserTest % count == 0)
        {
            std::cout << "The digit is prime." << "\n";
            return 0;
        }


int userNumber()
{
